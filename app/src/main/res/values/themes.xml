<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyTranslate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyTranslate.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyTranslate.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyTranslate.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.App.SpinnerOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">#FFFFFF</item> <!-- لون النص -->
        <item name="android:background">?attr/selectableItemBackground</item> <!-- خلفية عند الضغط -->
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorAccent">#FF4081</item>
        <item name="android:spinnerItemStyle">@style/CustomSpinnerItem</item>
    </style>

    <style name="CustomSpinnerItem" parent="Widget.AppCompat.Spinner">
        <item name="android:background">#FFEB3B</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>