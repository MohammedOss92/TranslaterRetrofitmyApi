<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="8dp">

        <!-- Spinner لاختيار لغة النص -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اختر لغة النص"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/sourceLanguageSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="8dp" />

        <!-- Switch لتبديل اللغات -->
        <Switch
            android:id="@+id/switchLanguages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تبديل اللغة"
            android:layout_marginBottom="8dp" />

        <!-- Spinner لاختيار لغة الترجمة -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اختر لغة الترجمة"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/targetLanguageSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="16dp" />

        <!-- EditText لإدخال النص المطلوب ترجمته -->
        <EditText
            android:id="@+id/inputText"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="أدخل النص المراد ترجمته"
            android:gravity="start|top"
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:textDirection="rtl" />

        <!-- زر الترجمة -->
        <Button
            android:id="@+id/translateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ترجم الآن"
            android:layout_marginBottom="16dp" />

        <!-- EditText لعرض النص المترجم -->
        <EditText
            android:id="@+id/translatedText"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="النص المترجم سيظهر هنا"
            android:gravity="start|top"
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:textDirection="rtl"
            android:focusable="false"
            android:layout_marginBottom="16dp" />

        <!-- زر لنسخ النص المترجم -->
        <Button
            android:id="@+id/copyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="نسخ الترجمة" />

    </LinearLayout>
</ScrollView>


